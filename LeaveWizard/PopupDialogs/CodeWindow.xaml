<Window x:Class="LeaveWizard.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CodeWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="CodeInput" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AcceptsReturn="True" AcceptsTab="True" VerticalScrollBarVisibility="Auto" Grid.Row="0" TextWrapping="Wrap" /> 
        <Button x:Name="OkayButton" Grid.Row="1" HorizontalAlignment="Right" Content="Okay" Click="OkayButton_Click" />
    </Grid>
</Window>
