<Window x:Class="LeaveWizard.CreateRegular"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create a new regular and route" Height="300" Width="300" Topmost="True" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" ShowInTaskbar="False" ResizeMode="NoResize" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Name:" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="NameInput" Grid.Row="0" Margin="40,0,0,0" HorizontalAlignment="Stretch" TextChanged="NameInput_TextChanged"/>
        <TextBlock Grid.Row="1" Text="Route:" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <TextBox x:Name="RouteInput" Grid.Row="1" Margin="40,0,0,0" HorizontalAlignment="Stretch" TextChanged="RouteInput_TextChanged"/>
        <Button IsDefault="True" x:Name="Okay" Content="Create" Click="Button_Click" Grid.Row="2" HorizontalAlignment="Right"/>
    </Grid>
</Window>
